{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with ts-node",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/semantic_steve/js/src/main.ts",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/semantic_steve/js/tsconfig.json",
        "SEMANTIC_STEVE_SCREENSHOT_DIR": "${workspaceFolder}/semantic_steve/screenshots"
      },
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/semantic_steve/js"
    }
  ]
}
